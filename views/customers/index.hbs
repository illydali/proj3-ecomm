{{#extends 'base'}}

{{#block 'content'}}
<table clas="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Address</th>
            <th>Contact</th>
            <th>Birthdate</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each customers}}
        <tr>
            <td>
                {{this.id}}
            </td>
            <td>
                {{this.first_name}} {{this.last_name}}
            </td>
            <td>
                {{this.address}}
            </td>
            <td>
                {{this.contact}}
            </td>
            <td>
                {{this.birth_date}}
            </td>
            {{!-- <td>
                <a href="/artists/{{this.id}}/update" class="btn btn-primary btn-sm">Update</a>
                <a href="/artists/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td> --}}
