{{#extends 'base'}}

{{#block 'content'}}
<h1>Deleting {{artist.name}}</h1>

<form method="POST">
    <div class="alert alert-danger">
        <p>Are you sure you want to delete {{artist.name}}?</p>
        <input type="submit" class="btn btn-danger mt-3" value="Yes"/>
        <a href="/artists" class="btn btn-success mt-3">No</a>
    </div>
</form>
{{/block}}
{{/extends}}