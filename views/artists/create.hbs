{{#extends 'base'}}

{{#block 'content'}}
<h1>Add New Artist Info</h1>
<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}"/>
    {{{form}}}
    <input type="submit" value="Add Artist" class="btn btn-primary btn-sm mt-3"/>
    <a href="/artists" class="btn btn-success btn-sm mt-3">Cancel</a>
</form>
{{/block}}

{{/extends}}